# =========================================
# ElizaOS Eliza Town Configuration
# =========================================

# LLM Provider Selection (optional - set to prioritize one provider)
# Options: groq, anthropic, openai
LLM_PROVIDER=groq

# Groq API (fastest, recommended for testing)
GROQ_API_KEY=gsk_your_key_here
GROQ_SMALL_MODEL=llama-3.1-8b-instant
GROQ_LARGE_MODEL=llama-3.3-70b-versatile

# OpenAI API (optional)
OPENAI_API_KEY=sk-your_key_here
OPENAI_SMALL_MODEL=gpt-4o-mini
OPENAI_LARGE_MODEL=gpt-4o

# Anthropic API (optional)
ANTHROPIC_API_KEY=sk-ant-your_key_here
ANTHROPIC_SMALL_MODEL=claude-3-5-haiku-20241022
ANTHROPIC_LARGE_MODEL=claude-sonnet-4-20250514

# Database connection (optional - enables persistent storage)
# Without this, agents run with in-memory storage only
DATABASE_URL=postgresql://user:password@localhost:5432/eliza_town

# Server Configuration
PORT=3000
NODE_ENV=development

# ElizaOS Settings (optional)
# LOG_LEVEL=info  # Options: debug, info, warn, error

# =========================================
# Code Execution Settings
# =========================================

# Enable filesystem/code operations for agents
# When true, agents can read/write files and execute shell commands
CODER_ENABLED=false

# Enable shell command execution
SHELL_ENABLED=false

# Working directory for code operations (default: project root)
# CODER_ALLOWED_DIRECTORY=/path/to/sandbox

# Command timeout in milliseconds (default: 30000)
# CODER_TIMEOUT=30000

# Max iterations for sub-agent tool loops (default: 25)
# SUBAGENT_MAX_ITERATIONS=25

# =========================================
# E2B Cloud Sandbox (Optional)
# =========================================

# Use E2B sandbox for code execution instead of local
# Recommended for public demos for security isolation
USE_E2B=false

# E2B API key (required if USE_E2B=true)
# Get yours at https://e2b.dev
# E2B_API_KEY=e2b_your_key_here

# =========================================
# Demo Mode
# =========================================

# Enable demo mode - agents continuously build/explore
DEMO_MODE=false

# Demo sandbox directory (default: /tmp/eliza-town-demo)
# DEMO_SANDBOX_DIR=/tmp/eliza-town-demo

# Target repository for demo exploration (default: eliza)
# DEMO_TARGET_REPO=eliza

# Interval between new task creation in ms (default: 60000)
# DEMO_TASK_INTERVAL=60000

# Maximum concurrent demo tasks (default: 2)
# DEMO_MAX_TASKS=2

# =========================================
# Active Worker Selection
# =========================================

# Which sub-agent type to use for code execution
# Options: eliza, claude-code, codex
# ELIZA_TOWN_ACTIVE_WORKER=eliza
